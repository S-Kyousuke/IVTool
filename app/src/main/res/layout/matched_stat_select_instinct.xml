<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:theme="@android:style/Theme.Holo"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:visibility="gone"
              android:layout_marginTop="@dimen/vertical_margin_small"
              android:id="@+id/matched_stat_select_instinct">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical">

        <CheckBox
            android:layout_width="@dimen/checkbox_size"
            android:layout_height="@dimen/checkbox_size"
            android:button="@null"
            android:background="@drawable/checkbox_yellow"
            android:layout_marginStart="@dimen/horizontal_small_margin"
            android:id="@+id/check_matched_first_stats"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginStart="@dimen/horizontal_small_margin"
            android:id="@+id/matched_first_stats"/>

    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:layout_marginTop="@dimen/vertical_margin">

        <CheckBox
            android:layout_width="@dimen/checkbox_size"
            android:layout_height="@dimen/checkbox_size"
            android:button="@null"
            android:background="@drawable/checkbox_yellow"
            android:layout_marginStart="@dimen/horizontal_small_margin"
            android:id="@+id/check_matched_second_stats"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginStart="@dimen/horizontal_small_margin"
            android:id="@+id/matched_second_stats"/>

    </LinearLayout>

</LinearLayout>
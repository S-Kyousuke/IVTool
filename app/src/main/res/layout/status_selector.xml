<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/status_bar_margin"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:id="@+id/labelText"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/labelText"
        android:layout_toStartOf="@+id/valueText"
        android:layout_centerInParent="true"
        android:maxHeight="@dimen/status_bar_height"
        android:splitTrack="false"
        android:id="@+id/valueBar"
        tools:ignore="UnusedAttribute"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/status_bar_margin"
        android:textColor="@color/black"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:id="@id/valueText"/>

</merge>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:theme="@android:style/Theme.Holo"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:visibility="gone"
              android:orientation="horizontal"
              android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_text_size"
        android:text="@string/best_stat_valor_start"
        android:layout_marginStart="@dimen/spinner_left_margin"/>

    <Spinner
        android:layout_width="@dimen/spinner_stat_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_small_margin"
        android:layout_marginEnd="@dimen/horizontal_small_margin"
        android:gravity="center_horizontal"
        android:id="@+id/spinner_best_stat"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_text_size"
        android:text="@string/best_stat_valor_end"/>

</LinearLayout>